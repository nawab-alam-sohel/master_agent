# Use Python 3.10 for backup environment
FROM python:3.10-slim

# Install required PostgreSQL tools (pg_dump)
RUN apt-get update && apt-get install -y postgresql-client && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy backup requirements first
COPY requirements-backup.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements-backup.txt

# Copy entire project (including backup folder)
COPY . .

# Default command (will be overridden by Render Cron Job command)
CMD ["python", "backup/backup_to_drive.py"]
